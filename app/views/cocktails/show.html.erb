<h2><%= @cocktail.name %></h2>
<p><%= link_to "Back to the list", cocktails_path %></p>

<p><%= link_to "Add an ingredient and dose", new_cocktail_dose_path(@cocktail) %></p>

<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.description %></p>
  <p> <%= dose.ingredient.name %></p>
  <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>


